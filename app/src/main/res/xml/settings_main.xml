<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="News Settings">

    <EditTextPreference
        android:defaultValue="@string/pages_default"
        android:inputType="numberDecimal"
        android:key="@string/max_pages_key"
        android:selectAllOnFocus="true"
        android:title="Items per Page">

    </EditTextPreference>


    <ListPreference
        android:defaultValue="@string/order_by_default"
        android:entries="@array/labels"
        android:entryValues="@array/values"
        android:key="@string/order_by_key"
        android:title="Order by"/>





</PreferenceScreen>