<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        >
        <LinearLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:id="@+id/author_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Joyce Wang"
                    android:textAllCaps="true"
                    android:gravity="left"/>

                <TextView
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/publishtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="2018-07-18T17:10:48Z" />


            </LinearLayout>

            <TextView
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textSize="18sp"
                android:id="@+id/newsTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="The 21-day bitcoin challenge"
                android:textStyle="bold"/>

            <TextView
                android:textColor="@android:color/black"
                android:padding="4dp"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="6"
                android:id="@+id/newsArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="There is a documentary series currently airing on iQiyi, China’s Netflix equivalent, about a Chinese bitcoin enthusiast who attempts to survive 21 days by merely living on 0.21 bitcoin, or $1,300, without any help or donations. He You Bing is traveling and ca…" />

        </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>